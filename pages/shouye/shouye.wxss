}


.flex-row > text {
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 50%;
  flex-shrink: 0;
  height: 80px;
}

button {
  font-weight: bold;
  flex-shrink: 0;
  margin: 20px 30px;
  border-radius: 30px;
  background: #673bb7;
  color: white;
  width: 100px;
  border: 0px;
}

.hover {
  background-color: #1797eb;
  color: white;
}

.border-right {
  border-right: 1px dashed #1797eb;
}

.border-bottom {
  border-bottom: 1px dashed #1797eb;
}

.border-right-bottom {
  border-bottom: 1px dashed #1797eb;
  border-right: 1px dashed #1797eb;
}
