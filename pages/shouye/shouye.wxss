.container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  height: 100%;
  overflow: auto;
}

.banner {
  position: relative;
  width: 100%;
  height: 80rpx;
  background: rgb(53, 230, 206);
  display: flex;
  align-items: center;
  padding: 0 0rpx;
  box-sizing: border-box;
  border-top: 1rpx solid #f5f5f5;
}
.banner scroll-view {
  flex:auto;
  height: 100%;
}

.sort {
  position: relative;
  flex: auto;
  font-size: 32rpx;
  display: inline-block;
  line-height: 80rpx;
  height: 100%;
  text-align: center;
}

.choose {
  color: #f8f6f6;
}
.line {
  position: absolute;
  bottom: -0.5rpx;
  width: 100%;
  height: 5rpx;
  border-radius: 10rpx;
  background: #699e93;
  animation: 0.3s;
}
@keyframes spread {
  0% {
    width: 0;
    left: 50%;
  }
  100% {
    width: 100%;
    left: 0;
  }
}
