/* pages/shezhi/shezhi.wxss */
.container {
  height: 100%;
  width: 100%;
  display: block;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding:0 0;
  box-sizing: border-box;
} 

.font{
  width:100%;
  color:black;
  font-size:36rpx;
  font-weight: bold;
  font-family:KaiTi;
  text-align: left;
  margin-top: 30rpx;
  margin-left: 60rpx;
}

.box {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 6rpx;
  padding: 3px 0px;
}

.table {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin: 6rpx;
  padding: 3px 0px;
}

.table-row{
  width:340rpx;
  height:150rpx;
  display: flex;
  font-family: KaiTi;
  justify-content: space-evenly;
  align-items: center;
  box-shadow: 0px 3px 5px 1px gainsboro;
  border-radius: 5px;
  margin: 12rpx;
}

.table-icon{
  width: 100rpx;
  height: 100rpx;
}

.table-name{
  width: auto;
  color:black;
  font-size:32rpx;
  font-weight: lighter;
  font-family:KaiTi;
  text-align: center;
  margin: 0rpx;
}

.label {
  width:720rpx;
  height: auto;
  justify-content: space-evenly;
  align-items: center;
  box-shadow: 0px 3px 5px 1px gainsboro;
  border-radius: 12rpx;
  margin: 12rpx;
}
.label-name {
  display: inline-block;
  height: auto;
  font-size: 15px;
  margin: 12rpx;
  margin-left: 24rpx;
  padding: 12rpx;
  border: gainsboro solid;
  border-radius: 24rpx;
}

.label-detail {
  height: auto;
  font-size: 11px;
  margin: 16rpx;
  margin-left: 24rpx;
  font: lighter;
}

.biaozhun-head {
  height: 60rpx;
  align-items: center;
  display: flex;
  flex-direction: row;
}

.biaozhun {
  height: 50rpx;
  display: flex;
  flex-direction: row;
}

.biaozhun-name {
  height: auto;
  width: 240rpx;
  align-items: center;
  text-align: center;
  font-size: 14px;
  border: 2px gainsboro solid;
}

.biaozhun-detail {
  width: 480rpx;
  align-items: center;
  text-align: center;
  font-size: 14px;
  border: gainsboro solid;
}

